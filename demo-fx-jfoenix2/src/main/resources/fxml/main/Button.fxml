<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXButton?>
<StackPane fx:id="root" xmlns="http://javafx.com/javafx/2.2"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.fxjfoenix2.main.controller.ButtonController">
    <VBox maxWidth="400" maxHeight="400" spacing="10">
        <Label>Flat Buttons</Label>
        <HBox spacing="40">
            <JFXButton prefWidth="100" prefHeight="40" buttonType="FLAT" text="BUTTON"
                       style="-fx-font-size:14px;"/>
            <JFXButton prefWidth="100" prefHeight="40" buttonType="FLAT" text="COLORED"
                       style="-fx-text-fill: #5264AE;-fx-font-size: 14px;"/>
            <JFXButton prefWidth="100" prefHeight="40" buttonType="FLAT" text="DISABLED"
                       style="-fx-font-size: 14px;" disable="true"/>
        </HBox>

        <Label>Raised Button</Label>
        <HBox></HBox>

        <Label>Styling Options</Label>
        <HBox></HBox>
    </VBox>
</StackPane>
